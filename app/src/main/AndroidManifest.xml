<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shofi.pertama.android.shofipopulermovi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="shofi.pertama.android.shofipopulermovi.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_movies"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="shofi.pertama.android.shofipopulermovi.view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="shofi.pertama.android.shofipopulermovi.view.activity.MainActivity" />
        <activity
            android:name="shofi.pertama.android.shofipopulermovi.view.activity.DetailActivity"
            android:parentActivityName="shofi.pertama.android.shofipopulermovi.view.activity.MainActivity" />
    </application>

</manifest>